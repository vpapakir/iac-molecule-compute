# Example configuration for AWS EC2
name_prefix     = "myapp-dev"
instance_type   = "t3.micro"
ssh_public_key  = "ssh-rsa AAAAB3NzaC1yc2EAAAA... your-public-key-here"
create_public_ip = true

# Optional: Custom AMI
